<h1>Welcome Back!</h1>

	<div id="sign-in-form">
      <%= form_for @user, url: "/sessions", :class => "form-group text-center", method: "post" do |f| %>
    
      <div>
        <%= f.text_field :email, placeholder: "Email", :class => "form-control" %>
      </div>

      <div>
        <%= f.password_field :password, placeholder: "Password", :class => "form-control" %>
      </div>

      <div>
        <%= f.submit "Sign In", :class => 'btn-success' %>
      </div>

      <% end %>
    </div>